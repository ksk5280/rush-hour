<%= erb(:'partials/_navbar') %>

<h1 class="white-font">Url Stats for <%= @client.identifier.capitalize %></h1><br>

<div class="url-specific-stats client-stats">
  <div class="stats-div well">
    <h4>Max Response Time</h4><ul class="info-text"> <%= @url_obj.max_response_time %></ul>
    <h4>Min Response Time</h4><ul class="info-text"> <%= @url_obj.min_response_time %></ul>
    <h4>Average Response Time</h4><ul class="info-text"> <%= @url_obj.average_response_time.to_i %></ul>
    <h4>All Response Times</h4><ul class="info-text"> <%= @url_obj.all_response_times_sorted_high_to_low.join(", ") %></ul>
  </div>
  <div class="stats-div well">
    <h4>HTTP Verbs Used</h4><ul class="info-text"> <%= @url_obj.all_http_verbs.join(", ") %></ul>
  </div>
  <div class="stats-div well">
    <h4>Top Three Referrers</h4>
    <ul class="info-text"> <% @url_obj.top_three_referrers.each do |url| %>
      <li><%= url %></li>
      <% end %>
    </ul>
    <h4>Top Three User Agents</h4>
    <ul class="info-text">
      <% @url_obj.top_three_user_systems.each do |url| %>
        <li><%= url.join(', ') %></li>
        <% end %>
    </ul>
  </div>
</div>
