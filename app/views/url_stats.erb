<%= erb(:'partials/_navbar') %>

<h1 class="white-font">Url Stats for <%= @client.identifier.capitalize %></h1><br>

<div class="url-specific-stats client-stats">
  <div class="stats-div well">
    <h4>Max Response Time:</h4><p class="info-text"> <%= @url_obj.max_response_time %></p>
    <h4>Min Response Time:</h4><p class="info-text"> <%= @url_obj.min_response_time %></p>
    <h4>Average Response Time:</h4><p class="info-text"> <%= @url_obj.average_response_time.to_i %></p>
    <h4>Response Times Across All Requests:</h4><p class="info-text"> <%= @url_obj.all_response_times_sorted_high_to_low.join(", ") %></p>
  </div>
  <div class="stats-div well">
    <h4>HTTP Verbs Used:</h4><p class="info-text"> <%= @url_obj.all_http_verbs.join(", ") %></p>
  </div>
  <div class="stats-div well">
    <h4>Top Three Referrers:</h4><p class="info-text"> <%= @url_obj.top_three_referrers.join(", ") %></p>
    <h4>Top Three User Agents:</h4><p class="info-text"> <%= @url_obj.top_three_user_systems.join(", ") %></p>
  </div>
</div>
